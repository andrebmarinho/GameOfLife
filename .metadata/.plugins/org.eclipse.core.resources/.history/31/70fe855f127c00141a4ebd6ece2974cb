package ui;

//Singleton responsável pelas mudanças das imagens.

import com.example.gameoflife.R;

import domain.Estados;

public class ImgSwitch {

	private static Integer[] arrayDeImgs = new Integer[100];
	
	private static ImgSwitch instance;
	
	public static ImgSwitch instance() {
		if(instance == null) {
			instance = new ImgSwitch();
		}
		return instance; 
	}
	
	private ImgSwitch() {
		for(int i2 = 10; i2 < 100; i2++)
			arrayDeImgs[i] = R.drawable.alive;
		for(int i = 0; i < 10; i++)
				arrayDeImgs[i] = R.drawable.dead;
	}
	
	public void setImgArray(Estados estado, int x, int y){
		int index = x + (y-1) * 10;
		
		switch(estado){
			case Morto:
				arrayDeImgs[index] = R.drawable.dead;
			case Vivo:
				arrayDeImgs[index] = R.drawable.alive;
			case Vazio:
				arrayDeImgs[index] = R.drawable.empty;
		
		}
	}
	
}
